*.ttf binary
*.eot binary
*.otf binary

# ============================================
# EXCLUDE FROM EXPORTS
# ============================================

.gitattributes export-ignore
.gitignore export-ignore
.github/ export-ignore
tests/ export-ignore
**/*.test.* export-ignore
**/*.spec.* export-ignore

# ============================================
# MERGE STRATEGIES
# ============================================

# Never merge these files, always take incoming
package-lock.json merge=ours
yarn.lock merge=ours
pnpm-lock.yaml merge=ours

# ============================================
# DIFF HANDLING
# ============================================

*.lock -diff
*.sum -diff
