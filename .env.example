# Global Environment Variables
# Copy this file to .env and fill in your actual values

# Application Environment
NODE_ENV=development
ENVIRONMENT=development

# API URLs
BACKEND_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000

# Database (PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/apidoc
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=apidoc

# Redis
REDIS_URL=redis://localhost:6379/0

# OpenAI API
# Google Gemini AI
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-pro

# JWT Authentication
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# GitHub OAuth (for repository integration)
GITHUB_CLIENT_ID=your-github-oauth-client-id
GITHUB_CLIENT_SECRET=your-github-oauth-client-secret
GITHUB_REDIRECT_URI=http://localhost:3000/api/auth/callback/github

# GitLab OAuth (optional)
GITLAB_CLIENT_ID=your-gitlab-oauth-client-id
GITLAB_CLIENT_SECRET=your-gitlab-oauth-client-secret

# Bitbucket OAuth (optional)
BITBUCKET_CLIENT_ID=your-bitbucket-oauth-client-id
BITBUCKET_CLIENT_SECRET=your-bitbucket-oauth-client-secret

# Stripe (for payments)
STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# Email Service (SendGrid or similar)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=your-sendgrid-api-key
FROM_EMAIL=noreply@apidocplatform.com

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Monitoring & Observability
SENTRY_DSN=your-sentry-dsn-here
PROMETHEUS_ENABLED=true

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
ALLOWED_HOSTS=localhost,127.0.0.1

# Feature Flags
ENABLE_AI_DOCUMENTATION=true
ENABLE_HEALTH_MONITORING=true
ENABLE_DEPENDENCY_ANALYSIS=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Storage (S3 compatible)
S3_BUCKET_NAME=apidoc-storage
S3_ACCESS_KEY_ID=your-s3-access-key
S3_SECRET_ACCESS_KEY=your-s3-secret-key
S3_REGION=us-east-1
S3_ENDPOINT_URL=https://s3.amazonaws.com
